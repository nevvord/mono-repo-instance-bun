{
  "name": "mono-repo",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run index.ts",
    "backend:dev": "pm2 start ecosystem.config.cjs --env development",
    "backend:start": "pm2 start ecosystem.config.cjs --env production",
    "backend:stop": "pm2 stop mono-repo-backend",
    "backend:restart": "pm2 restart mono-repo-backend",
    "backend:logs": "pm2 logs mono-repo-backend",
    "backend:status": "pm2 status",
    "backend:monit": "pm2 monit",
    "bruno:open": "echo 'Please install Bruno from https://www.usebruno.com/ and open the bruno/ directory'",
    "bruno:test": "echo 'Bruno tests can be run from the Bruno desktop application'",
    "web-ui:dev": "pm2 start ecosystem.config.cjs --env development --only mono-repo-web-ui",
    "web-ui:start": "pm2 start ecosystem.config.cjs --env production --only mono-repo-web-ui",
    "web-ui:stop": "pm2 stop mono-repo-web-ui",
    "web-ui:restart": "pm2 restart mono-repo-web-ui",
    "web-ui:logs": "pm2 logs mono-repo-web-ui",
    "web-ui:build": "cd packages/web-ui && bun run build",
    "web-ui:preview": "cd packages/web-ui && bun run preview",
    "web-ui:check": "cd packages/web-ui && bun run check",
    "web-ui:format": "cd packages/web-ui && bun run format",
    "web-ui:lint": "cd packages/web-ui && bun run lint",
    "web-ui:test": "cd packages/web-ui && bun run test",
    "admin-ui:dev": "pm2 start ecosystem.config.cjs --env development --only mono-repo-admin-ui",
    "admin-ui:start": "pm2 start ecosystem.config.cjs --env production --only mono-repo-admin-ui",
    "admin-ui:stop": "pm2 stop mono-repo-admin-ui",
    "admin-ui:restart": "pm2 restart mono-repo-admin-ui",
    "admin-ui:logs": "pm2 logs mono-repo-admin-ui",
    "admin-ui:build": "cd packages/admin-ui && bun run build",
    "admin-ui:test": "cd packages/admin-ui && bun run test",
    "dev:all": "pm2 start ecosystem.config.cjs --env development",
    "start:all": "pm2 start ecosystem.config.cjs --env production",
    "stop:all": "pm2 stop all",
    "restart:all": "pm2 restart all",
    "logs:all": "pm2 logs",
    "status:all": "pm2 status",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "check": "bun run type-check && bun run lint && bun run format:check",
    "check:fix": "bun run lint:fix && bun run format",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "pre-push": "bun run check && bun run test"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "eslint": "^9.32.0",
    "@eslint/js": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/jest-dom": "^6.6.4",
    "jsdom": "^25.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@types/bcryptjs": "^3.0.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.1",
    "prisma": "^6.13.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
